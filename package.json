{
  "name": "bun-boilerplate",
  "version": "1.0.0",
  "description": "True Bun 1.3.1 boilerplate with native dev server, console: true, and React 19",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run server.ts",
    "build": "bun build ./src/index.tsx --outdir ./public --entry-naming bundle.js --minify",
    "start": "NODE_ENV=production bun run server.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
